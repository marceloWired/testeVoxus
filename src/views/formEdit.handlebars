<form action="/editPayment" method="POST">
    <input type="hidden" name="_METHOD" value="PUT" />
    <input type="hidden" value="{{payment._id}}" name="id">
    <div class="form-group">
        <label for="title">Titulo</label>
        <input type="text" class="form-control" id="title" name="title" value="{{payment.title}}">
    </div>
    <div class="form-group">
        <label for="value">Valor</label>
        <input type="number" class="form-control" id="value" name="value" value="{{payment.value}}">
    </div>
    <div class="form-group">
        <label for="date">Data</label>
        <input type="text" class="form-control" id="date" placeholder="DD/MM/AAAA" data-mask="00/00/0000" name="date">
    </div>
    <div class="form-group">
        <label for="externalTax">Taxa Externa</label>
        <input type="number" class="form-control" id="externalTax" readonly="true" name="externalTax"
            value="{{payment.externalTax}}">
    </div>
    <div class="form-group">
        <label for="comments">Coment√°rios</label>
        <textarea class="form-control" id="comments" rows="3" name="comments">{{payment.comments}}</textarea>
    </div>
    <div class="form-group">
        <input type="submit" class="btn  btn-dark" value="Enviar">
    </div>
</form>

<script>
    const valueInput = document.querySelector('#value');

    valueInput.addEventListener('keyup', function () {
        let value = document.querySelector('#value').value;
        let tax = value * 0.05;

        document.querySelector('#externalTax').value = tax.toFixed(2);
    })
</script>